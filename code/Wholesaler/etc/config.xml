		<events>
            <customer_prepare_save>
                <observers>
                    <Acaldeira_Wholesaler>
                        <class>Acaldeira_Wholesaler_Model_Observer</class>
                        <method>updateCustomerZipcodezone</method>
                        <type>singleton</type>
                    </Acaldeira_Wholesaler>
                </observers>
            </customer_prepare_save>
            
        </events> -->
  	</global>
  	<admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<Acaldeira_Wholesaler before="Mage_Adminhtml">Acaldeira_Wholesaler_Adminhtml</Acaldeira_Wholesaler>
					</modules>
				</args>
			</adminhtml>
			 <wholesaler_index>
                <use>admin</use>
                <args>
                    <module>Acaldeira_Wholesaler</module>
                    <frontName>wholesaler</frontName>
                </args>
            </wholesaler_index>
            <wholesaler_catalog>
                <use>admin</use>
                <args>
                    <module>Acaldeira_Wholesaler</module>
                    <frontName>wholesaler_wcatalog</frontName>
                </args>
            </wholesaler_catalog>
		</routers>
	</admin> 
  	<adminhtml>
		<layout>
			<updates>
				<wholesaler>
					<file>acaldeira/wholesaler.xml</file>
				</wholesaler>
			</updates>
		</layout>
	</adminhtml>
</config>